<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/trip_recycler_horizontal_spacing"
    android:paddingEnd="@dimen/trip_recycler_horizontal_spacing"
    android:paddingTop="@dimen/trip_recycler_vertical_spacing"
    android:paddingBottom="@dimen/trip_recycler_vertical_spacing"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_trip_photo_main"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_trip_name_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="21sp"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            tools:text="New Zealand Road Trip 2018"/>

        <TextView
            android:id="@+id/tv_trip_dates_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            tools:text="10.01.18 - 21.01.18"/>

    </LinearLayout>


</FrameLayout>
